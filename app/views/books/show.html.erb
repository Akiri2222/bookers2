<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @book_new, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <% @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user.id==current_user.id %>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            <% end %>
          </td>
          <td>
            <% if @book.user.id==current_user.id %>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
            <% end %>
          </td>
        </tbody>
      </table>
    </div>
  </div>
</div>