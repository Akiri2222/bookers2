
<h2>User Info</h2>
<%= image_tag user.get_profile_image(100,100) %>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<p>
  <%= link_to edit_user_path(user.id) do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</p>

<h2>New book</h2>
