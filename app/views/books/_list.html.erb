<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<div>
  <h2>User Info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <h3><%= user.name %></h3>
  <p><%= link_to "edit", edit_user_path(user.id) %></p>
</div>

<h2>New book</h2>
